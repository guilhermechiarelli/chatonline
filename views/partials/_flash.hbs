{{#if success}}
<div class="row justify-content-center">
  <div class="col-ex-12 col-lg-6">
    <div class="alert alert-success">
      <center>
        {{success}}
      </center>
    </div>
  </div>
</div>
{{/if}}

{{#if error}}
<div class="row justify-content-center">
  <div class="col-ex-12 col-lg-6">
    <div class="alert alert-danger">
      <center>
        {{error}}
      </center>
    </div>
  </div>
</div>
{{/if}}